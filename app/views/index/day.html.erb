<!DOCTYPE html>
<html>
	<head>
  		<title><%= @time%> Matchups</title>
	</head>
	<body>

		<div id="header">
			<h2><%= Date::MONTHNAMES[params[:month].to_i] + ' ' + params[:year]  %></h2>
		</div>

		<%= link_to("Months", {:controller => 'index', :action => 'month', :year => params[:year], :month => params[:month]})%>

		<div id="main">
			<div id="content">
				<p>
					<% @days.each do |day| %>
						<%= link_to(day, {:controller => "index", :action => "game", :year => params[:year], :month => params[:month], :day => day}) %> <br />
					<% end %>
				</p>
			</div>
		</div>

		<div id="footer">
			<p id="copyright">&copy; Mike Halioua </p>
		</div>

	</body>
</html>